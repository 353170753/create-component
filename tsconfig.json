
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "diagnostics": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "types": [
        "node"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": false,
    "inlineSources": false,
    "suppressImplicitAnyIndexErrors": true,
    "plugins": [{ "name": "tslint-language-service" }]
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "src/samples/*"],
  "include": ["src/**/*"]
}