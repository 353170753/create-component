{
    "name": "<%= proName %>",
    "description": "<%= description %>",
    "version": "<%= proVersion %>",
    <% if (gitUrl) { %>
    "repository": {
    "type": "git",
    "url": "<%= gitUrl %>"
    },<% } %>
    <% if (author) { %>
    "author": "<%= author %>",<% } %>
    "license": "<%= license %>",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "jsnext:main": "dist/index.es.js",
    "engines": {
      "node": ">=8",
      "npm": ">=5"
    },
    "scripts": {
        "test": "jest --coverage",
        "test:w": "jest --watch",
        "build": "rollup -c",
        "start": "rollup -c -w",
        "prepare": "<%= manger %> run build",
        "format": "prettier --write '{.,__tests__,src/**}/*.{ts,tsx,css,less,scss}'",
        "style:lint": "stylelint src/**/*.{scss,css,less} --fix",
        "ts:lint": "tslint -p .",
        "lint": "<%= manger %> run style:lint && <%= manger %> run ts:lint",
        "pretest": "<%= manger %> run lint",
        "commit": "git-cz",
        "release": "standard-version",
        "predeploy": "cd example && <%= manger %> install && <%= manger %> run build",
        "deploy": "gh-pages -d example/build"
    },
    "dependencies": {},
    "peerDependencies": {
        "prop-types": "^15.5.4",
        "react": "^15.0.0 || ^16.0.0",
        "react-dom": "^15.0.0 || ^16.0.0"
    },
    "devDependencies": {
      "@types/enzyme": "^3.1.15",
      "@types/enzyme-adapter-react-16": "^1.0.3",
      "@types/jest": "^23.3.9",
      "@types/react": "^16.7.6",
      "@types/react-dom": "^16.0.9",
        <% if (!!useCommitlint) { %>
        "@commitlint/cli": "^7.2.1",
        "@commitlint/config-conventional": "^7.1.2",
        <% } %>
        "@svgr/rollup": "^4.0.3",
        <% if (useCommitizen) { %>
        "commitizen": "^3.0.4",
        "cz-conventional-changelog": "^2.1.0",
        <% } %>
        "cross-env": "^5.2.0",
        "enzyme": "^3.7.0",
        "enzyme-adapter-react-16": "^1.7.0",
        "husky": "^1.1.4",
        "jest": "^23.6.0",
        "jest-css-modules-transform": "^2.1.1",
        "lint-staged": "^8.0.4",
        "prettier": "^1.15.2",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "react-test-renderer": "^16.6.3",
        "regenerator-runtime": "^0.12.1",
        "rollup": "^0.67.3",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
        "rollup-plugin-postcss": "^1.6.2",
        "rollup-plugin-typescript2": "^0.18.0",
        "rollup-plugin-url": "^2.0.1",
        <% if (useCHANGELOG) { %>
        "standard-version": "^4.4.0",
        <% } %>
        "stylelint": "^9.8.0",
        "stylelint-config-standard": "^18.2.0",
        "tslint-config-prettier": "^1.16.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.1.6",
        "ts-jest": "^23.10.4"
  },
  "files": [
    "dist"
  ]<% if (useCommitizen) { %>,
  "config": {
  "commitizen": {
    "path": "node_modules/cz-conventional-changelog"
  }
},
<% } %>

<% if (usePrecommit) { %>
  "husky": {
  "hooks": {
    "pre-commit": "lint-staged"<% if (usePrecommit && useCommitlint) { %>,
    "commit-msg": "commitlint -e $GIT_PARAMS"
    <% } %>
  }
},
"lint-staged": {
  "*.{ts,tsx,css}": [
    "<%= manger %> run format",
    "git add"
  ],
  "src/**/*.{ts,tsx}": [
    "<%= manger %> run lint",
    "git add"
  ]
}
<% } %>

}
