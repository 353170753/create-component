{
  "name": "create-component",
  "version": "0.0.1",
  "description": "CLI for bootstrapping react component",
  "main": "index.js",
  "bin": {
    "create-component": "./index.js"
  },
  "scripts": {
    "test": "jest",
    "format": "prettier --write --config .prettierrc src/*.ts",
    "commit": "git-cz",
    "lint": "tslint -p src/**/*.ts",
    "precommit": "tsc && lint-staged",
    "release": "standard-version",
    "watch": "tsc -w"
  },
  "keywords": [
    "react",
    "library",
    "component",
    "cli"
  ],
  "author": "xiaomuzhu",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/inquirer": "0.0.43",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.118",
    "@types/mem-fs": "^1.1.1",
    "@types/mem-fs-editor": "^4.0.1",
    "@types/node": "^10.12.2",
    "@types/shelljs": "^0.8.0",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "install": "^0.12.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "npm": "^6.4.1",
    "prettier": "^1.14.3",
    "shelljs": "^0.8.3",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "inquirer": "^6.2.0",
    "lodash": "^4.17.11",
    "mem-fs": "^1.1.3",
    "mem-fs-editor": "^5.1.0",
    "node-compat-require": "^1.0.5",
    "safe-commander": "^2.11.2"
  }
}
