{
  "name": "create-component",
  "version": "0.0.1",
  "description": "CLI for bootstrapping react component",
  "main": "index.js",
  "bin": {
    "create-component": "./index.js"
  },
  "scripts": {
    "test": "ava -v && standard *.ts",
    "format": "prettier --write --config .prettierrc src/*.ts",
    "commit": "git-cz",
    "lint": "tslint -p src/**/*.ts",
    "precommit": "tsc && lint-staged",
    "release": "standard-version",
    "watch": "tsc -w"
  },
  "keywords": [
    "react",
    "library",
    "component",
    "cli"
  ],
  "author": "xiaomuzhu",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/node": "^10.12.2",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "standard-version": "^4.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "inquirer": "^6.2.0",
    "node-compat-require": "^1.0.5"
  }
}
